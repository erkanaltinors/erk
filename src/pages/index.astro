	<main>
		<section class="w-full max-h-screen overflow-hidden bg-gradient-to-t from-sky-900 to-black">
			<div class="container">
							<h1 class="text-xl md:text-3xl lg:text-4xl xl:text-5xl text-center text-white mt-5">Erkan ALTINORS</h1>
