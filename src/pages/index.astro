---
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import avatar from "../images/avatar.png";
const blogPosts = await getCollection("blog");
---

<Layout lang="tr" title="Erkan Altınörs" description="Frontend Developer">
 <section class="py-14">
  <div class="container">
    <div class="bg-gray-300 ring-2 ring-gray-400 p-1 lg:p-4 flex items-center lg:block gap-2 relative group">
      <div>
        <Image src={avatar} width={100} height={100} alt="Avatar" class="hidden lg:block lg:absolute lg:-top-[25px] lg:-left-[25px] grayscale group-hover:grayscale-0 transition"/>
      </div>
      <div class="text-center">
        <h1 class="text-5xl lg:text-6xl">Erkan Altınörs</h1>
        <h2 class="text-2xl lg:text-5xl mb-0 mt-2">Frontend Developer</h2>
      </div>
    </div>
   <h2 class=" relative my-5 text-xl lg:text-4xl">Blog Yazıları</h2>
   <ul class="grid gap-4" role="list">
    {
     blogPosts.map((post) => (
      <li role="listitem" class="odd:bg-gray-100 even:bg-gray-200 w-full lg:w-auto hover:[&:nth-child(6n+1)]:bg-pink-400 hover:[&:nth-child(6n+2)]:bg-blue-400  hover:[&:nth-child(6n+3)]:bg-amber-400 hover:[&:nth-child(6n+4)]:bg-teal-400  hover:[&:nth-child(6n+5)]:bg-cyan-400 hover:[&:nth-child(6n+6)]:bg-rose-400 relative transition duration-300 drop-shadow-[6px_6px_0_rgb(0,0,0)] ring-2 ring-black hover:drop-shadow-none text-black">
       <a
        href={`blog/${post.slug}`}
        class="group box-border block h-full w-full rounded-sm p-2 md:p-4 focus:outline-none"
       >
        <p class="m-0 pr-6 lg:pr-8 font-semibold lg:font-normal text-xl lg:text-2xl">{post.data.title}</p>
        <Icon name="ph:arrow-up-right" size={32} class="absolute right-2 top-2 hidden lg:block" />
        <Icon name="ph:arrow-up-right" size={24} class="absolute right-2 top-2 lg:hidden" />
        <div>
         <p class="m-0 text-base lg:text-lg">{post.data.description}</p>
        </div>
       </a>
      </li>
     ))
    }
   </ul>
  </div>
 </section>
</Layout>
